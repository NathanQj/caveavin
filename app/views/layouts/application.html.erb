<!DOCTYPE html>
<html>
<head>
  <title>Caveavin</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
  <%= render "layouts/menu" %>
  <div id="notification">
  	<% if notice %>
  	  <span><i class="material-icons left">info_outline</i><%= notice %></span>
  	<% elsif alert %>
  	  <span><i class="material-icons left">info_outline</i><%= alert %></span>
  	<% end %>
  </div>

  <main>
    <%= yield %>
  </main>
</body>
</html>
